= form_with(model: entry, local: true, url: url_for([entry.blog, entry])) do |form|
  - if entry.errors.any?
    %div#error_explanation
    %h2= pluralize(entry.errors.count, "error") + "prohibited this entry from being saved:"

    %ul
      - entry.errors.full_messages.each do |message|
        %li= message
  %div.field
    = form.label :title
    = form.text_field :title

  %div.field
    = form.label :body
    = form.text_area :body

  %div.actions
    = form.submit
